<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Namit Chatbot</title>

    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Inter", sans-serif;
        background: #0d0d0d;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        padding: 10px;
      }

      .chat-container {
        background: #111;
        width: 100%;
        max-width: 600px;
        height: 90vh;
        display: flex;
        flex-direction: column;
        border-radius: 14px;
        overflow: hidden;
        border: 1px solid #333;
        box-shadow: 0 0 20px #000;
      }

      .chat-header {
        background: #0b0b0b;
        color: #0b93f6;
        padding: 18px;
        text-align: center;
        font-size: 22px;
        font-weight: 700;
        border-bottom: 1px solid #222;
        letter-spacing: 1px;
      }

      #chat-box {
        flex: 1;
        overflow-y: auto;
        padding: 20px;
        background: #0d0d0d;
      }

      .msg {
        max-width: 80%;
        padding: 14px 18px;
        border-radius: 14px;
        margin: 10px 0;
        font-size: 16px;
        line-height: 1.6;
        opacity: 0;
        animation: fadeIn 0.3s ease forwards;
      }

      .user-msg {
        background: #0b93f6;
        color: white;
        margin-left: auto;
        border-bottom-right-radius: 0;
        box-shadow: 0 0 10px rgba(0, 144, 255, 0.4);
      }

      .bot-msg {
        background: #1d1d1d;
        color: #eee;
        margin-right: auto;
        border-bottom-left-radius: 0;
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.08);
        white-space: pre-line; /* ← FIXES LINE BREAKS */
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(8px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      #chat-form {
        display: flex;
        gap: 8px;
        padding: 15px;
        background: #111;
        border-top: 1px solid #222;
      }

      #message {
        flex: 1;
        padding: 12px;
        border-radius: 8px;
        border: 1px solid #333;
        background: #0a0a0a;
        color: white;
        font-size: 15px;
      }

      #sendBtn,
      #stopBtn {
        padding: 12px 18px;
        border: none;
        font-weight: bold;
        border-radius: 8px;
        cursor: pointer;
        transition: 0.2s ease;
      }

      #sendBtn {
        background: #0b93f6;
        color: white;
      }

      #stopBtn {
        background: #ff4444;
        color: white;
        display: none;
      }

      #sendBtn:active,
      #stopBtn:active {
        transform: scale(0.92);
      }
    </style>
  </head>

  <body>
    <div class="chat-container">
      <div class="chat-header">⚡ Namit Chatbot</div>

      <div id="chat-box"></div>

      <form id="chat-form">
        <input
          type="text"
          id="message"
          placeholder="Type your message..."
          required
        />
        <button id="sendBtn" type="submit">Send</button>
        <button id="stopBtn" type="button">Stop</button>
      </form>
    </div>

    <script>
      const chatBox = document.getElementById("chat-box");
      const stopBtn = document.getElementById("stopBtn");
      let controller = null;

      function typeWriterEffect(element, text, speed = 15) {
        let index = 0;

        function type() {
          if (index < text.length) {
            element.innerHTML += text.charAt(index);
            index++;
            setTimeout(type, speed);
          }
        }
        type();
      }

      document
        .getElementById("chat-form")
        .addEventListener("submit", async (e) => {
          e.preventDefault();
          const input = document.getElementById("message");
          const msg = input.value;
          input.value = "";

          chatBox.innerHTML += `<div class="msg user-msg">${msg}</div>`;
          chatBox.scrollTop = chatBox.scrollHeight;

          controller = new AbortController();
          stopBtn.style.display = "block";

          try {
            const res = await fetch("/chat", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({ message: msg }),
              signal: controller.signal,
            });

            const data = await res.json();
            const botDiv = document.createElement("div");
            botDiv.className = "msg bot-msg";
            chatBox.appendChild(botDiv);

            typeWriterEffect(botDiv, data.reply); // smooth animation
            chatBox.scrollTop = chatBox.scrollHeight;
          } catch (err) {
            chatBox.innerHTML += `<div class="msg bot-msg">❌ Error / Stopped</div>`;
          } finally {
            stopBtn.style.display = "none";
          }
        });

      stopBtn.addEventListener("click", () => {
        if (controller) controller.abort();
      });
    </script>
  </body>
</html>
